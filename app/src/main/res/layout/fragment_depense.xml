<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.depense.DepenseFragment"
    android:background="@color/couleurBlanche">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/idAppBarDepenseFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/longueur_app_bar"
            android:background="@color/colorPrimaryDark"
            >


        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/idTabLayoutDepenseFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idAppBarDepenseFragment"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="@color/couleurBlanche"
            app:tabIndicatorColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            app:tabSelectedTextColor="@color/colorAccent"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/idViewPaperDepense"
            android:layout_below="@id/idTabLayoutDepenseFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginTop_viewpaper" >

        </android.support.v4.view.ViewPager>

    </RelativeLayout>

</RelativeLayout>
